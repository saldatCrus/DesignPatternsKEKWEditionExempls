<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DesignPatternsKEKWEditionExempls.Theme.StylesDictirionary">


    <Style TargetType="Button" x:Key="CloseButton">
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="TextElement.FontFamily" Value="Theme/Fonts/Dosis"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Theme/Fonts/Dosis.ttf"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseDirectlyOver" Value="True">
                <Setter Property="Background" Value="#FF4C78"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>
    
</ResourceDictionary>